{
  "compilerOptions": {
    "module": "commonjs",                // Use commonjs for Firebase functions
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node", "firebase-functions"]  // includes type node and firebase
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
